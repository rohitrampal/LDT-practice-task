<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>chat application</title>
</head>
<body>
    <h1>chat with your consultant...</h1>
    <input id="startchat" type="hidden" data-roomid="<%= id %>"></input>
    <input type="text" id="username" placeholder="username...">
    <input type="text" id="content" placeholder="message..">
    <button id="btn">Send</button>

    <ul id="msglist">
        <% for(let i=0; i < chats.length; i++) { %>
            <li><%= chats[i].username %> : <%= chats[i].content %></li>
         <% } %>
    </ul>



    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io()

        let startchat = document.getElementById('startchat');
        let btn = document.getElementById('btn');
        let content = document.getElementById('content');
        let username = document.getElementById('username');
        let msgList = document.getElementById('msglist');

        socket.emit('join_room',{
            roomId:startchat.getAttribute('data-roomid')
        })

        btn.addEventListener('click',(e)=>{
            socket.emit('client_msg',{
            username: username.value,
            content: content.value,
            roomId: startchat.getAttribute('data-roomid')
        })
        })
        socket.on('server_msg',(data)=>{
            const li = document.createElement('li');
            li.innerText = `${data.username} : ${data.content}`;
            msgList.appendChild(li);
        })

    </script>
</body>

</html>